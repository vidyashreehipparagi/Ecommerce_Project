<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecommerce_Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow mb-3 nav">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/brandimg.webp" height="50" width="50" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                        @if (httpcontextAccessor.HttpContext.Session.GetString("RoleId") == "1")
                        {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Category List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Product List</a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="UserList">User List</a>
                            </li>
                        }
                         @if (httpcontextAccessor.HttpContext.Session.GetString("RoleId") == "0")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Product List</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="MyOrder"><i class="fa fa-shopping-bag fa-2x" aria-hidden="true"></i>MyOrder</a>
                            </li>
                        }



                       
                    </ul>
                </div>
            </div>
            <ul class="navbar-nav ml-auto">
                @if (httpcontextAccessor.HttpContext.Session.GetString("RoleId") == "0")
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="ViewCart">
                            <i class="fa fa-cart-plus fa-3x" aria-hidden="true"></i>
                        </a>
                    </li>
               
                }

                @if (string.IsNullOrEmpty(httpcontextAccessor.HttpContext.Session.GetString("uid")))
                { 

                <li class="nav-item">

                    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Registration">Register</a>
                </li>
             
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                    </li>
                  
                }
                 @if (!string.IsNullOrEmpty(httpcontextAccessor.HttpContext.Session.GetString("uid")))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="">Welcome @httpcontextAccessor.HttpContext.Session.GetString("userName")</a>
                    </li> 
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="LogOut">LogOut</a>
                    </li>
                }
            </ul>

        </nav>
        
        
    </header>
    <div class="container cc">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   <footer>
        <div class="container">
